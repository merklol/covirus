<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="summary" type="com.bilingoal.covirus.dto.Summary"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            tools:context=".SummaryFragment">
        <androidx.core.widget.NestedScrollView
                android:id="@+id/summary_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:text="Overview"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="#595959"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:text="Case Summary worldwide"/>
                <include
                        layout="@layout/summary_card_view_layout"
                        bind:global="@{summary.global}"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:text="@string/top5_title"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="#595959"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:text="@string/top5_desc"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top5_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:overScrollMode="never"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:text="Latest news"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="#595959"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:text="Latest news on coronavirus disease (COVID-19) in the world"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/latest_news_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:overScrollMode="never"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>